<% if current_user.role.code == "admin" %>

<div class="container">
	<h3>Airline List</h3>
	<% if current_user.role.code == "admin" %>
<%= link_to 'Add Airline', new_airport_airline_path, class: "btn btn-outline-primary btn-sm" %>
<% end %><br><br>
<table class="table table-striped table-hover table-bordered">
	<tr>
	<th>Airline Name</th>
	<th>Airline Type</th>
	<th colspan="3">Actions</th>
    </tr>
 <% @airlines.each do |airline| %>
    <tr>
	<td><%= airline.name %></td>
	<td><%= airline.airline_type %></td>
	<td>
		<%= link_to 'Show', airport_airline_path(@airport,airline),class: "btn btn-outline-info btn-sm"  %>
		<td><%= link_to 'Edit', edit_airport_airline_path(@airport,airline),class: "btn btn-outline-warning btn-sm" %> </td>
		<td><%= link_to 'Delete', airport_airline_path(@airport,airline),class: "btn btn-outline-danger btn-sm",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
	</td>
    </tr>
 <% end %>
	
</table>
</div>
<% else %>
   <%= render  'layouts/alerts' %>
<% end %>