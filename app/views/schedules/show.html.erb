<div class="container">
	<div class="row">
	  <div class="text-center">
	  		<div class="col-md-8">
			<div class="card text-center">
  <div class="card-header">
    <strong>Schedule Details</strong>
  </div>
  <div class="card-body">
    <table class="table">
       <tr>
       	<th class="card-title">Departure Time</th>
        <th class="card-title">Arrival Time</th>
        <th class="card-title">Duration</th>
        <th class="card-title">Flight Id</th>
       </tr>
      <tr>
      	<td class="card-text"><%= @schedule.d_time %></td>
      	<td class="card-text"><%= @schedule.a_time %></td>
      	<td class="card-text"><%= @schedule.duration %></td>
      	<td class="card-text"><%= @schedule.flight_id %></td> 
      </tr>
    </table>
  </div>
  <div class="card-footer text-muted">
    <% if user_signed_in? && current_user.role.code == "admin" %>
    <%= link_to 'Edit', edit_schedule_path(@schedule), class: "btn btn-success" %>
    <% end %>
	  <%= link_to 'Back', schedules_path, class: "btn btn-dark" %>

  </div>
</div>
		</div>	
	  </div>
	</div>	
</div>
